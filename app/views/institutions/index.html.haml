.row
  .col-lg-12
    .page-header
      %h1#forms Instituciones
.row-fluid.header
  .span10.pull-right
    .span4
      %input.search{:placeholder => "Escriba un nombre de usuario...", :type => "text"}/
    .span3
      .ui-select
        %select
          %option{:value => ""} Tipo de Institucion
          %option{:value => "AK"} Hospital
          %option{:value => "HI"} Paciente
          %option{:value => "CA"} Otro
    .span2
      %a.btn-glow.primary Buscar
  / Users table
.row
  .col-lg-1
  .col-lg-10
    %table.table.table-hover.table-striped
      %thead
        %tr
          %th Categoria
          %th Nombre
          %th DirecciÃ³n
          %th Descripcion
          %th Telefono
          %th Email
          %th Web
          %th 
      %tbody
        - @institutions.each do |institution|
          %tr
            %td= institution.category
            %td= institution.name
            %td= institution.address
            %td= institution.desc
            %td= institution.phone
            %td= institution.mail
            %td= institution.web
            %td
              /= link_to 'Show', institution
              /= link_to 'Edit', edit_institution_path(institution)
              /= link_to 'Destroy', institution, :method => :delete, :data => { :confirm => 'Are you sure?' }

              = link_to institution, :class => 'btn btn-primary btn-sm' do
                %i.icon.icon-loupe.icon-white
                Ver
              = link_to edit_institution_path(institution), :class => 'btn btn-primary btn-sm' do
                %i.icon.icon-remove.icon-white
                Editar
              = link_to "Eliminar", institution, :class => 'btn btn-default btn-sm', method: :delete, :data => { :confirm => 'Esta seguro de Eliminar este Test?' }
  .col-lg-1