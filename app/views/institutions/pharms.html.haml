.container
  .page-header
    %h3 Farmacias

  .row
    - if @institutions.present?
      - @institutions.each do |institution|
        .col-sm-4.no-padding
          .postMedical
            .postMedicalContent
              .top
                .img
                  - if institution.image.present? 
                    = image_tag institution.image.url(:thumb), class: "img-responsive"
                  - else
                    %img.avatar.bb{ src: "/images/pharm.png", width: "140" }/
                .text
                  .title._1= institution.name
                  - if institution.address.present?
                    %p
                      %i.icon.icon-home.icon-white
                      = institution.address
                  - if institution.phone.present?
                    %p
                      %i.icon.icon-phone.icon-white
                      = institution.phone

                  - if institution.mail.present?
                    %p
                      %i.icon.icon-envelope.icon-white
                      = institution.mail

                  - if institution.web.present?
                    %p
                      %i.icon.icon-globe.icon-white
                      = link_to institution.web, "http://#{institution.web}", target: "blank"
              .bottom
              - if institution.desc.present?
                %p
                  = institution.desc.html_safe
    - else
      .alert.alert-info
        No hay farmacias para mostrar.
