!!!
%html
  %head
    %title Login
    = stylesheet_link_tag    "login", media: "all"
    = javascript_include_tag "login"
    = csrf_meta_tags
  %body
    .login-bg
      .row-fluid.login-wrapper
        %img.logo{:src => "/images/log5.png", :style => "height:274px;margin-top:-90px;margin-bottom:5px;"}/
        - if notice
          .notice= notice
        - if alert
          .alert= alert
        = yield
