.row
  .col-lg-12
    .page-header
      %h1#forms Usuarios

.row-fluid.header
  .span10.pull-right
    .span4
      %input.search{:placeholder => "Escriba un nombre de usuario...", :type => "text"}/
    .span3
      .ui-select
        %select
          %option{:value => ""} Tipo de Usuario
          %option{:value => "AK"} Medico
          %option{:value => "HI"} Paciente
          %option{:value => "CA"} Otro
    .span2
      %a.btn-glow.primary Buscar
  / Users table
.row
  .col-lg-1
  .col-lg-10
    %table.table.table-hover.table-striped
      %thead
        %tr
          %th.sortable Nombre
            
          %th.sortable Tipo de Usuario
          %th.sortable Contacto
          %th.sortable Fecha de Registro
          %th.sortable.align-right Email
      %tbody
        - @users.each_with_index do |user, index|
          %tr{ class: "#{ index == 0 ? 'first' : '' }" }
            %td
              %img.img-circle.avatar.hidden-phone{:src => "/images/contact-img.png"}/
                
              = link_to user.full_name, profile_user_path(user), class: 'name'
            %td= I18n.t(user.user_type, scope: 'user.user_type') if user.user_type.present?
            %td=  user.contact_numbers
            %td= I18n.l user.created_at, format: :long
            %td.align-right= mail_to user.email
