.container
  .row
    .col-lg-12
      .page-header
        %h1#forms Test
  .row
    .col-lg-1
    .col-lg-10
      %table.table.table-hover.table-striped.table-users
        %thead
          %tr
            %th Categorias
            %th Parametro
            %th Unidades
            %th Valores de Referencia
            %th Tipo de test
            %th Descripcion
            %th Imagen
            %th{colspan: "3"}
        %tbody
          - @tests.each do |test|
            %tr
              %td= test.test_category_description
              %td= test.parameter
              %td= test.unit
              %td= test.reference_values
              %td= test.test_type
              %td= test.description
              %td
                - if test.image.present?
                  = image_tag test.image.url(:thumb)
              %td
                = link_to test, :class => 'btn btn-primary btn-sm' do
                  %i.icon.icon-edit.icon-white
                  Ver
              %td
                = link_to edit_test_path(test), :class => 'btn btn-primary btn-sm' do
                  %i.icon.icon-remove.icon-white
                  Editar
              %td
                = link_to "#modal-test-#{test.id}", :class => 'btn btn-default btn-sm', :'data-toggle' => 'modal' do
                  %i.icon.icon-remove.icon-white
                  Eliminar
                  
                  / Modal
                  .modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", role: "dialog", tabindex: "-1", id: "modal-test-#{test.id}"}
                    .modal-dialog
                      .modal-content
                        .modal-header
                          %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} Ã—
                          %h4.modal-title Eliminar Test
                        .modal-body= "Esta seguro de Eliminar este test"
                        .modal-footer
                          %button.btn.btn-default{"data-dismiss" => "modal", type: "button"} Cancelar

                          = link_to "Ok", test, :class => 'btn btn-primary', method: :delete




    .col-lg-1