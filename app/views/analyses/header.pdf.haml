.header
  %ul
    %li
      .medium
        %span.title1.bold NOMBRES Y APELLIDOS:
        %span.title.desc
          - if @analysis.patient_type_selector
            = @analysis.patient_name
          - else
            = @analysis.patient_full_name

      - if @analysis.patient.age.present? && @analysis.patient.age != nil && @analysis.patient.age != 0
        .tiny
          %span.title3.bold EDAD:
          %span.title.desc
            = pluralize @analysis.patient.age, 'año'
    %li
      .big
        %span.title1.bold MEDICO SOLICITANTE:
        %span.title.desc= @analysis.doctor_full_name
    %li
      .small
        %span.title2.bold FECHA DE RECEPCIÓN:
        %span.title.desc= I18n.l @analysis.receipt_datetime, format: "%d / %m / %Y"
      .small
        %span.title2.bold FECHA DE ENTREGA:
        %span.title.desc= I18n.l @analysis.delivery_datetime, format: "%d / %m / %Y"


:css
  .header{
    page-break-inside:avoid; 
    page-break-after:auto;
    float:left;
    padding: 0px;
    margin: 0 0 0 60px;
    -webkit-border-radius: 7px;
    -moz-border-radius: 7px;
    border-radius: 7px;
    border: 2px solid #000;
    width: 640px;
  }
  .header ul{
    float:left;
    list-style-type:none;
    margin: 10px 0 0 -10px;
  }
  .header ul li{
    float:left;
    margin-bottom: 10px;
    line-height: 5px;
  }
  .header ul li span{
    float:left;
  }
  .header ul li .title1{
    font-weight: bold;
    font-size: 14px;
    width: 180px;
  }
  .header ul li .title2{
    font-weight: bold;
    font-size: 14px;
    width: 180px;
  }
  .header ul li .title3{
    font-weight: bold;
    font-size: 14px;
    width: 60px;
  }
  .header ul li .desc{
    font-size: 14px;
    float: left;
  }
  .header ul li .big{
    width: 650px;
    float: left;
  }
  .header ul li .small{
    width: 320px;
    float: left;
  }
  .header ul li .medium{
    width: 477px;
    float: left;
  }
  .header ul li .tiny{
    width: 120px;
    float: left;
  }