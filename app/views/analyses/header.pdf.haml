.header
  %ul
    %li
      .big
        %span.title1.bold NOMBRE:
        %span.title.desc= @analysis.patient_full_name
    %li
      .big
        %span.title1.bold MEDICO SOL.:
        %span.title.desc= @analysis.doctor_full_name
    %li
      .small
        %span.title2.bold FECHA DE RECEPCIÃ“N :
        %span.title.desc= I18n.l @analysis.receipt_datetime, format: "%d / %m / %Y"
      .small
        %span.title2.bold FECHA DE ENTREGA :
        %span.title.desc= I18n.l @analysis.delivery_datetime, format: "%d / %m / %Y"


:css
  .header{
    page-break-inside:avoid; 
    page-break-after:auto;
    float:left;
    /*width: 700px;*/
    /*width: 100%;*/
    /*height: 100px;*/
    padding: 0px;
    /*margin: -60px 15px 0;*/
    margin: 0 15px 0;
    -webkit-border-radius: 7px;
    -moz-border-radius: 7px;
    border-radius: 7px;
    border: 2px solid #000;
  }
  .header ul{
    float:left;
    list-style-type:none;
  }
  .header ul li{
    float:left;
    margin-bottom: 10px;
  }
  .header ul li span{
    float:left;
  }
  .header ul li .title1{
    font-weight: bold;
    font-size: 14px;
    width: 115px;
  }
  .header ul li .title2{
    font-weight: bold;
    font-size: 14px;
    width: 180px;
  }
  .header ul li .desc{
    font-size: 14px;
  }
  .header ul li .big{
    width: 650px;
    float: left;
  }
  .header ul li .small{
    width: 320px;
    float: left;
  }

