.row
  .col-lg-12
    .page-header
      %h2 Anuncios
.row  
  .col-lg-12
    %table.table.table-hover.table-striped.table-users
      %thead
        %tr
          %th.text-center Titulo
          %th.text-center Descripcion
          %th.text-center Imagen
          %th.text-center
      %tbody
        - @notices.each do |notice|
          %tr
            %td.text-center= notice.title
            %td.text-center= notice.description.html_safe
            %td.text-center= image_tag notice.image.url(:thumb), class: "avatar"
            %td.text-center
              /= link_to 'Ver', notice
              /= link_to 'Editar', edit_notice_path(notice)
              /= link_to 'Eliminar', notice, :method => :delete, :data => { :confirm => 'Estas seguro?' }

              = link_to edit_notice_path(notice), :class => 'btn btn-primary btn-sm' do
                %i.icon.icon-edit.icon-white
                Editar          
              = link_to "Eliminar", notice, :class => 'btn btn-default btn-sm', method: :delete, :data => { :confirm => 'Esta seguro de Eliminar este Anuncio?' }